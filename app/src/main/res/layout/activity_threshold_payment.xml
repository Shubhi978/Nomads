<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page"
    tools:context=".ThresholdPaymentActivity">

    <include
        android:id="@+id/threshold_payment_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_payment_text_view"
        android:text="Pay the threshold amount"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/threshold_payment_toolbar"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:padding="10dp"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_payment_razorpay_button"
        android:background="@drawable/button"
        android:text="Pay with Razorpay"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingHorizontal="15dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/threshold_payment_text_view"
        android:layout_marginTop="30dp">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_payment_upi_button"
        android:background="@drawable/button"
        android:text="Pay with UPI"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingHorizontal="15dp"
        android:layout_below="@+id/threshold_payment_razorpay_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_payment_text_view_2"
        android:text="------  Demo Payment  ------"
        android:layout_below="@+id/threshold_payment_upi_button"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:padding="10dp"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_payment_success_button"
        android:background="@drawable/button"
        android:text="Success"
        android:layout_below="@+id/threshold_payment_text_view_2"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="10dp">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threshold_payment_failure_button"
        android:background="@drawable/button"
        android:text="Failure"
        android:layout_below="@+id/threshold_payment_text_view_2"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="10dp">
    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>